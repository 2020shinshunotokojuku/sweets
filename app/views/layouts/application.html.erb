<!DOCTYPE html>
<html>
  <head>
    <title>Sweets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-fixed-top " role="navigation">
      <div class="container ">
       <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
         <span class="sr-only">Toggle navigation</span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
       </button>
       <a class="navbar-brand " href="#">NAGANO CAKE</a>
     </div>

         <div class="row">
          <div class=" text-white">
              <!-- <header class="navbar navbar-fixed-top navbar-inverse"> -->
              <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <!-- サインインしている場合の表示 -->
               <% if admin_signed_in? %>

                <li class="">
                  <%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout head_item" %>
                </li>
                <li class="">
                  <%= link_to "会員一覧", admin_customers_path,class:"glyphicon glyphicon-cart cart head_item" %>
                </li>
                <li class="">
                  <%= link_to "ジャンル一覧", admin_genres_path,class:"glyphicon glyphicon-cart cart head_item" %>
                </li>
                <li class="">
                  <%= link_to "注文履歴一覧", admin_histories_path,class:"glyphicon glyphicon-cart cart head_item" %>
                </li>
                <li class="">
                  <%= link_to "商品一覧", admin_items_path,class:"glyphicon glyphicon-cart cart head_item" %>
                </li>
               <% elsif customer_signed_in? %>
               <!-- logoutを表示 -->
                <li class="center">
                  <%= link_to " logout", destroy_customer_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout head_item" %>
                </li>
                <li>
                  <%= link_to ' Home', root_path ,class:"glyphicon glyphicon-home home head_item" %>
                </li>
                <li class="">
                  <%= link_to " Cart", cart_contents_path,class:"glyphicon glyphicon-log-in head_item" %>
                </li>
                <li class="">
                  <%= link_to " My page", customers_path,class:"glyphicon glyphicon-log-in login head_item" %>
                </li>
                <% else %>
                <!-- sign upを表示 -->
                <li class="">
                  <%= link_to " Sign up", new_customer_registration_path, class:"glyphicon glyphicon-edit sign_up head_item" %>
                </li>
                <!-- loginを表示 -->
                <li class="">
                  <%= link_to " Login", new_customer_session_path, class:"glyphicon glyphicon-log-in sign_in  head_item" %>
                </li>
                <li class="">
                  <%= link_to " About", about_items_path, class:"glyphicon glyphicon-apple  head_item" %>
                </li>
               <% end %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  <div class = "background">
  <div class ="container">
    <%= yield %>
  </div>
  </div>

    <footer class="footer pull-left">
      <div class="container">
        <p class="text-muted">Copyright (C) 2020　Otokojukuc</p>
      </div>
    </footer>
  </body>
</html>
