<h1>注文履歴詳細</h1>

<a>注文情報</a>
<table>
	<tr><%= @history_detail.created_at %></tr>
	<tr><%= @history.post_number %></tr>
	<tr><%= @history.address %></tr>
	<tr><%= @history_detail.production_status %></tr>
	<tr><%= @history.payment_method %></tr>
</table>
<a>請求情報</a>
<table>
	<tr>商品合計</tr>
	<tr>配送料</tr>
	<tr><%= @history.total_fee %></tr>
</table>
<a>注文内容</a>
<table>
	<thead>
        <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
    	<tr>
			<th><%= @cart_content.item_id.item_name %></th>
            <th><%= @cart_content.item_id.item_name %></th>
            <th><%= @history_detail.quantity %></th>
            <th><%= @cart_content.item_id.item_name %>*<%= @history_detail.quantity %></th>
		</tr>
	</tbody>
</table>


