<h1>購入者情報入力</h1>

<%= form_for(@history, url:really_histories_path, method: :get) do |f| %>

  <div class = "field">
      <!-- 下記で支払い方法を選択 -->
      <%= f.label :"支払い方法" %><br><br>


      <%= f.radio_button :payment_method, :"クレジットカード" %>
      <%= f.label :"クレジットカード" %><br>


      <%= f.radio_button :payment_method, :"銀行振込" %>
      <%= f.label :"銀行振込" %><br><br><br>

  </div>


  <div class = "field" >

        <!-- 下記でお届け先住所を選択 -->
        <%= f.label :"お届け先"%><br><br>

        <%= radio_button_tag :selected_address, "ご自身の住所" %>
        <%= f.label :"ご自身の住所" %><br><br>

        <%= @customer.address %><br><br><br>
        

        <%= radio_button_tag :selected_address, "登録済み住所から選択" %>
        <%= f.label :"登録済み住所から選択" %><br><br><br>

        <!-- 下記に選択バーを設置 -->
        <!-- コントローラーに書くとエラーになる -->


        <%= collection_select(:shipping_addresses ,:id, ShippingAddress.all, :id, :address) %><br><br><br>



        <%= radio_button_tag :selected_address, "新しいお届け先" %>
        <%= f.label :"新しいお届け先" %><br><br>

        <p>郵便番号</p>
        <%= f.number_field :post_number %>

        <p>住所</p>
        <%= f.text_field :address %>

        <p>宛名</p>
        <%= f.text_field :name %><br><br>

      <%= f.submit '確認画面へ進む' %>

        <!-- 下記に上記の情報を保存するボタンを設置 -->
        <!-- ページ遷移と上記2つの情報をセーブする -->

    </div>

<% end %>