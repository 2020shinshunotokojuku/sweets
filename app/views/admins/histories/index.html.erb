<h1>注文一覧画面</h1>

<table class="table">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @histories.each do |history| %>
		<tr>
			<td>
				<%= link_to "購入日時", admins_history_path(history) %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>
