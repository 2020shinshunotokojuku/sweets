<h1>会員一覧画面</h1>
<table class="table table-bordered">
	<thead style="background-color: #d0e4e2;">
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @customers.each do |f| %>
		<tr>
			<td>
				<%= f.id %>
			</td>
			<td>
				<%=link_to f.family_name+f.first_name, admin_customer_path(f.id) %>
			</td>
			<td>
				<%= f.email %>
			</td>
			<td>
				<% if f.deleted_at.nil? %>
				<p>有効</p>
				<%  else %>
				<p>退会済</p>
				<% end %>
			</td>

		</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @customers, class: "paginate" %>