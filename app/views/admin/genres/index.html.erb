<h1>ジャンル追加・一覧画面</h1>
<p>ジャンル</p>

<%= form_for(@genre,url:"/admin/genres") do |f| %>
<%= f.text_field :name %>
<%= check_box_tag :is_valid %>
<%= label_tag :is_valid, "有効" %>
<%= check_box_tag :is_valid  %>
<%= label_tag :is_vaild,"無効" %>
<%= f.submit "追加" %>
<% end %>

<div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th>edit</th>
		</tr>
	</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
					<%= genre.name %>
				</td>
				<td>
					<%if genre.is_valid==true %>
					<p>有効</p>
					<%= genre.is_valid %></td>
					<% else %>
					<p>無効<p>
					<%end%>
				<td>
					<%= link_to "編集する",edit_admin_genre_path(genre.id) %>
				</td>
			</tr>
		</tbody>
		<% end %>
	</table>
</div>
<p>Find me in app/views/admin/genres/index.html.erb</p>
