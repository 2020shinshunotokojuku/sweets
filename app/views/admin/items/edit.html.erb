<h1>商品編集画面</h1>
<%= form_for(@item,url:"/admin/items/#{@item.id}") do |f| %>
<%= f.attachment_field :image_id%>
<p>商品名</p><%= f.text_field :item_name %>
<p>商品説明</p><%= f.text_area :dess_item %>
<p>ジャンル</p><%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
<p>税抜き価格</p>
<%= f.text_field :without_tax %>
<span>円</span>
<p>販売ステータス</p>
<%= f.select :is_sale,[["販売中",true],["売り切れ",false]] %>

<%= f.submit "編集する" %>
<% end %>
