<div class="container">
	<h1>商品　詳細画面</h1>
	<%= attachment_image_tag @item, :image, :fill, 60, 60, format: "jpeg" %>
	<h4>商品名</h4>
	<%= @item.item_name %>
	<h4>商品説明</h4>
	<%= @item.dess_item %>
	<h4>ジャンル</h4>
	<%= @item.genre.name %>
	<h4>税込み価格（税抜き価格）</h4>
	<%= @item.without_tax.to_s(:delimited) %>
	<span>(<%= @item.without_tax.to_s(:delimitd) %>)</span>
	<h4>販売ステータス</h4>
	<% if @item.is_sale==true %>
	<p>販売中</p>
	<% else %>
	<p>売り切れ</p>
	<% end %>
	<p><%=link_to "編集する",edit_admin_item_path,class:"btn btn-primary" %></p>
</div>