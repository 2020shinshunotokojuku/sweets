<h1>ECサイト側の商品一覧ページ</h1> 

<!-- 下記は「ジャンル検索」枠に表示させる -->
<%= render 'genre_search'%>



<% if @genre %>
	<h3><%= @genre.name %></h3><br>
<% else %>
	<h3>全件表示</h3><br>
<% end %>

<p>（全 <%= @items.count %> 件）</p>


<!-- 下記に「商品画像」「商品名」「金額」を4列で表示させる -->
<% @items.each do |item| %>
	<span>
		<%= attachment_image_tag item, :image, :fill, 300, 200 %></span><br>
    <%= link_to item_path(item) do %>
	<span><%= item.item_name%></span><br>
     <% end %>
	<span><%= item.without_tax%><%= "  円"%></span><br>
<% end %>

